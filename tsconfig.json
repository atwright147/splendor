{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Add this block for alias
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],
      "#ref/*": ["ref/*"],
      "#stores/*": ["src/stores/*"],
      "#types/*": ["src/types/*"],
      "#routes/*": ["src/routes/*"],
      "#components/*": ["src/components/*"],
      "#hooks/*": ["src/hooks/*"],
      "#utils/*": ["src/utils/*"],
    },

    /* Linting */
    // "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
